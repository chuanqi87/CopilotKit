# OpenAI API Key - 必需
# 支持 GPT-4o 模型的 OpenAI API Key
OPENAI_API_KEY=sk-...

# LangSmith API Key - 可选
# 用于监控和追踪 LangGraph 执行
LANGSMITH_API_KEY=ls__...

# Python Agent 配置
LANGGRAPH_API=true
HOST=0.0.0.0
PORT=8000

# UI 配置
REMOTE_ACTION_URL=http://localhost:8000/copilotkit
NODE_ENV=development
NEXT_PUBLIC_DEPLOYMENT_URL=http://localhost:3000

